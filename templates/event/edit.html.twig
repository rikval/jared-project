{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - edit: event{% endblock %}

{% block body %}
    <h1>Edit date</h1>

    {{ form_start(form) }}
    {{ form_row(form.title) }}
    {{ form_row(form.beginAt) }}
    {{ form_row(form.endAt) }}
    {{ form_row(form.arrivalHour) }}
    {{ form_row(form.allowance) }}
    {{ form_row(form.currency) }}
    {{ form_row(form.hasAccommodation) }}
    {{ form_row(form.isPublic) }}

    <div class="text-right">
        <button type="submit" class="btn btn-primary">
            edit
        </button>
    </div>
    {{  form_end(form) }}
{% endblock %}