<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">

        <title>{% block title %}Jared - Project{% endblock %}</title>
        {% block stylesheets %}
            {#TODO add font to Encore#}
            <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700|Roboto+Slab:400,700|Material+Icons" />
            <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css">

            {{encore_entry_link_tags('app')}}
        {% endblock %}
    </head>
    <body class="dark-edition">
    <div class="wrapper ">
        <div class="sidebar" data-color="purple" data-background-color="black" data-image="../dist/img/sidebar-2.jpg">

            <div class="logo">
                <a href="{{ path('app_index_index') }}" class="simple-text logo-normal">
                    Jared Project
                </a>
            </div>
            <div class="sidebar-wrapper">
                <ul class="nav">
                    <li class="nav-item active">
                        <a class="nav-link" href="javascript:void(0)">
                            <i class="material-icons">dashboard</i>
                            <p>Tableau de bord</p>
                        </a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="{{ path('tour_index') }}">
                            <i class="material-icons">map</i>
                            <p>Tour</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('venue_index') }}">
                            <i class="material-icons">local_activity</i>
                            <p>Venue</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('event_index') }}">
                            <i class="material-icons">event</i>
                            <p>Event</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('location_index') }}">
                            <i class="material-icons">location_on</i>
                            <p>Location</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        {#TODO Cacher le lien si non logg√©#}
                        <a class="nav-link"
{#                           href="{{ path('user_show', {'id': app.user.id})#}
                           href="{{ path('user_index')
                           }}">
                            <i class="material-icons">person</i>
                            <p>User Profile</p>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('contact_index') }}">
                            <i class="material-icons">contacts</i>
                            <p>Contact</p>
                        </a>
                    </li>
                    <!-- your sidebar here -->
                </ul>
            </div>
        </div>
        <div class="main-panel">
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg navbar-transparent navbar-absolute fixed-top ">
                <div class="container-fluid">
                    <div class="navbar-wrapper">
                        <a class="navbar-brand" href="javascript:void(0)">Jared Project</a>
                    </div>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                        <span class="navbar-toggler-icon icon-bar"></span>
                    </button>
                    <div class="collapse navbar-collapse justify-content-end">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="javascript:void(0)">
                                    <i class="material-icons">notifications</i>
                                    <p class="d-lg-none d-md-block">
                                        Notifications
                                    </p>
                                </a>
                            </li>
                            <!-- your navbar here -->
                        </ul>
                    </div>
                </div>
            </nav>

            <!-- End Navbar -->
            <div class="content">
                <div class="container-fluid">
                    <!-- Flash message -->
                    {% for type, messages in app.session.flashBag.all %}
                        {% for message in messages %}
                            {% if type == 'error' %}
                                {% set type = 'danger' %}
                            {% endif %}
                            <div class="alert alert-{{ type }} mt-2">
                                {{ message|raw }}
                            </div>
                        {% endfor %}
                    {% endfor %}
                    <!-- your content here -->
                    {% block body %}{% endblock %}
                </div>
            </div>
            <footer class="footer">
                <div class="container-fluid">
                    <nav class="float-left">
                        <ul>
                            <li>
                                <a href="https://www.creative-tim.com">
                                    Creative Tim
                                </a>
                            </li>
                        </ul>
                    </nav>
                    <div class="copyright float-right">
                        &copy;
                        <script>
                            document.write(new Date().getFullYear())
                        </script>, made with <i class="material-icons">favorite</i> by
                        <a href="https://www.creative-tim.com" target="_blank">Creative Tim</a> for a better web.
                    </div>
                    <!-- your footer here -->
                </div>
            </footer>
        </div>
    </div>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            {#TODO base scripts#}
        {% endblock %}
    </body>
</html>
